{
  "name": "getweather",
  "version": "1.0.0",
  "description": "Desktop weather application built with React, Node, Express, and TypeScript",
  "author": "Sudarshan",
  "main": "electron/main.js",
  "private": true,

  "scripts": {
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:desktop": "npm run build:backend && npm run build:frontend && electron-builder",
    "start:desktop": "electron ."
  },

  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },

  "build": {
    "appId": "com.sudarshan.getweather",
    "productName": "getWeather",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/dist/**/*",
      "backend/node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  }
}
